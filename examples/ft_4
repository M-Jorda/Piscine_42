#include <stdio.h>
#include <stdlib.h>

// Fonction qui retourne un pointeur vers une sous-chaîne
char* substring(const char *src, int start, int length) {
    char *sub = (char *)malloc(length + 1);
    for (int i = 0; i < length; i++) {
        sub[i] = src[start + i];
    }
    sub[length] = '\0';
    return sub;
}

int main() {
    const char *original = "Hello, World!";
    char *sub = substring(original, 7, 5);

    printf("Original: %s\n", original);
    printf("Substring: %s\n", sub);

    free(sub);  // Libération de la mémoire allouée
    return 0;
}
